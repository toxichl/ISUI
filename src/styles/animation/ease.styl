$ease-motion($className, $keyframeName)
    $make-motion($className, $keyframeName)
    .{$className}-enter-active, .{$keyframeName}-appear
        opacity 0
        animation-timing-function: linear
        animation-duration $transition-time
    .{$className}-leave-active
        animation-timing-function: linear
        animation-duration: $transition-time

$ease-motion(ease, $css-prefix+'Ease');

@keyframes {$css-prefix}EaseIn {
    0% {
        opacity: 0;
        transform: scale(0.9);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes {$css-prefix}EaseOut {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0.9);
  }
}


